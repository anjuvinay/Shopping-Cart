 <section>
        <div class="container mt-5">
            <div class="row">
                {{#each profile}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 16rem; height:40rem">
                        <img class="card-img-top"
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Gender}}</p>
                            <p class="card-text">{{this.phone}}</p>
                            <p class="card-text">{{this.email}}</p>
                            <p class="card-text">{{this.city}}</p>
                            <p class="card-text">{{this.state}}</p>
                           
                            <a href="/edit-profile/{{this._id}}" class="btn btn-primary">Edit</a>
                            
                        </div>
                    </div>
                </div>
               
 {{/each}}


            </div>
        </div>
    </section>

